
{% extends 'base.html.twig' %}

{% block title %}Liste des Tags{% endblock %}

{% block body %}
    <h1>Liste des Tags</h1>

    {# Affichage des messages flash #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success flash-message">{{ message }}</div>
    {% endfor %}
    
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger flash-message">{{ message }}</div>
    {% endfor %}

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for tag in tags %}
                <tr>
                    <td>{{ tag.nom }}</td>
                    <td>
                        <a href="{{ path('tag_edit', {'id': tag.id}) }}" class="btn btn-warning">Modifier</a>
                        <a href="{{ path('tag_delete', {'id': tag.id}) }}" class="btn btn-danger">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">Aucun tag trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tag_new') }}" class="btn btn-primary">Ajouter un tag</a>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Supprimer les messages flash après 3 secondes
        setTimeout(function() {
            const flashMessages = document.querySelectorAll('.flash-message');
            flashMessages.forEach(function(message) {
                message.style.display = 'none';
            });
        }, 3000);
    </script>
{% endblock %}
