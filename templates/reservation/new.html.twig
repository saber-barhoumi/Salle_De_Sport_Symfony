{% extends 'base2.html.twig' %}

{% block body %}
    <div class="container-fluid d-flex justify-content-center align-items-center vh-100 bg-dark">
        <div class="card p-5 shadow-lg w-75" style="border-radius: 20px; background-color: #2c2c2c;">
            <div class="card-header text-center border-0 bg-transparent">
                <h1 class="text-danger fw-bold">Create a Reservation</h1>
            </div>
            <div class="card-body">
                {{ form_start(form, { 'attr': { 'class': 'needs-validation', 'novalidate': 'novalidate' } }) }}
                    <div class="row">
                        {% for field in form %}
                            <div class="col-md-6 mb-4">
                                <div class="form-group">
                                    {% if field.vars.name == 'dateFieldName' %} {# Replace 'dateFieldName' with the actual field name #}
                                        <div class="input-group">
                                            {{ form_widget(field, { 
                                                'attr': { 
                                                    'class': 'form-control bg-dark text-light border-danger',
                                                    'style': 'position: absolute; opacity: 0; width: 0; height: 0;' 
                                                } 
                                            }) }}
                                            <span class="input-group-text bg-danger border-danger text-light" style="cursor: pointer;">
                                                <i class="fa fa-calendar"></i>
                                            </span>
                                        </div>
                                    {% else %}
                                        {{ form_label(field, null, { 'label_attr': { 'class': 'text-light fw-bold' } }) }}
                                        {{ form_widget(field, { 'attr': { 'class': 'form-control bg-dark text-light border-danger' } }) }}
                                    {% endif %}
                                    {{ form_errors(field, { 'attr': { 'class': 'text-danger' } }) }}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-danger btn-lg w-50 rounded-pill shadow-sm d-flex align-items-center justify-content-center">
                            <i class="bi bi-calendar-check me-2"></i>Reserve Now
                        </button>
                    </div>
                {{ form_end(form) }}

            
                
                <!-- Back to Reservation List Button -->
                <div class="text-center mt-3">
                    <a href="{{ path('reservation_index') }}" class="btn btn-outline-light btn-lg w-50 rounded-pill shadow-sm d-flex align-items-center justify-content-center">
                        <i class="bi bi-arrow-left-circle me-2"></i>Back To Your Reservation List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Include Bootstrap Icons CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
{% endblock %}
