{% extends 'base3.html.twig' %}

{% block body %}
    <div class="container mt-5 pt-5"> <!-- Ajout de pt-5 pour augmenter l'espacement -->
        <!-- Titre principal et boutons -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="text-light mb-0">Your Reservations</h1>
            <div>
                <a href="{{ path('app_frontequipement') }}" class="btn btn-outline-secondary btn-lg mx-2">
                    <i class="bi bi-arrow-left-circle" style="margin-right: 10px;"></i> Back to Equipment List
                </a>
                <a href="{{ path('reservation_new') }}" class="btn btn-danger btn-lg mx-2">
                    <i class="bi bi-calendar-plus" style="margin-right: 10px;"></i> Create New Reservation
                </a>
            </div>
        </div>

        {% if reservations is empty %}
            <!-- Message d'alerte si aucune réservation -->
            <div class="alert alert-warning text-center">No reservations found.</div>
        {% else %}
            <!-- Cartes des réservations -->
            <div class="row row-cols-1 row-cols-md-3 g-5">
                {% for reservation in reservations %}
                    <div class="col mb-4">
                        <div class="card shadow-sm rounded-3 border-light" style="transition: transform 0.3s ease-in-out;">
                            <div class="card-body">
                                <h5 class="card-title text-primary">{{ reservation.equipement.nom }}</h5>

                                {% if reservation.equipement.photo %}
                                    <img src="{{ asset('uploads/images/' ~ reservation.equipement.photo) }}" class="card-img-top" alt="Equipment Photo" style="object-fit: cover; height: 200px; border-radius: 10px;">
                                {% else %}
                                    <img src="https://via.placeholder.com/200" class="card-img-top" alt="Default Equipment Photo" style="object-fit: cover; height: 200px; border-radius: 10px;">
                                {% endif %}

                                <p class="card-text text-muted mt-3">
                                    <strong>Start:</strong> {{ reservation.startDate|date('Y-m-d H:i') }} <br>
                                    <strong>End:</strong> {{ reservation.endDate|date('Y-m-d H:i') }} <br>
                                </p>

                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <a href="{{ path('app_reservation_pdf', {'id': reservation.id}) }}" class="btn btn-outline-success btn-lg">
                                        <i class="bi bi-file-earmark-pdf" style="margin-right: 10px;"></i> PDF
                                    </a>

                                    <form method="post" action="{{ path('reservation_delete', { id: reservation.id }) }}" onsubmit="return confirm('Are you sure you want to delete this reservation?');">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button type="submit" class="btn btn-danger btn-lg">
                                            <i class="bi bi-trash" style="margin-right: 10px;"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>

    <style>
        /* Apply black background */
        body {
            background-color: #000000; /* Black background */
            color: #fff; /* Light text color */
        }

        /* Custom styles for the buttons */
        .btn {
            padding: 12px 20px;
            font-size: 1.1rem;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

        /* Increase spacing at the top */
        .container {
            margin-top: 100px; /* Espacement supplémentaire */
        }
    </style>

    <!-- Include Bootstrap Icons CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
{% endblock %}

