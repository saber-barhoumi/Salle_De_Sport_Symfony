{% extends 'base2.html.twig' %}

{% block body %}
    <div class="mt-4 ms-3"> <!-- Align buttons to the left -->
        <a href="{{ path('app_frontequipement') }}" class="btn btn-lg btn-outline-secondary mb-3 mx-2">
            <i class="bi bi-arrow-left-circle" style="margin-right: 10px;"></i> Back to Equipment List
        </a>
        <a href="{{ path('reservation_new') }}" class="btn btn-lg btn-danger mb-3 mx-2">
            <i class="bi bi-calendar-plus" style="margin-right: 10px;"></i> Create New Reservation
        </a>
    </div>

    <div class="container mt-5">
        <h1 class="text-center mb-5 text-light">Your Reservations</h1> <!-- Changed text color to light for better contrast on dark background -->

        {% if reservations is empty %}
            <div class="alert alert-warning text-center">No reservations found.</div>
        {% else %}
            <div class="row row-cols-1 row-cols-md-3 g-5"> <!-- Adjusted gap between columns to g-5 -->
                {% for reservation in reservations %}
                    <div class="col mb-4"> <!-- Added margin bottom to each card -->
                        <div class="card shadow-sm rounded-3 border-light" style="transition: transform 0.3s ease-in-out;">
                            <div class="card-body">
                                <h5 class="card-title text-primary">{{ reservation.equipement.nom }}</h5>

                                {% if reservation.equipement.photo %}
                                    <img src="{{ asset('uploads/images/' ~ reservation.equipement.photo) }}" class="card-img-top" alt="Equipment Photo" style="object-fit: cover; height: 200px; border-radius: 10px;">
                                {% else %}
                                    <img src="https://via.placeholder.com/200" class="card-img-top" alt="Default Equipment Photo" style="object-fit: cover; height: 200px; border-radius: 10px;">
                                {% endif %}
                                
                                <p class="card-text text-muted mt-3">
                                    <strong>Start:</strong> {{ reservation.startDate|date('Y-m-d H:i') }} <br>
                                    <strong>End:</strong> {{ reservation.endDate|date('Y-m-d H:i') }} <br>
                                </p>

                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <a href="{{ path('app_reservation_pdf', {'id': reservation.id}) }}" class="btn btn-outline-success btn-lg">
                                        <i class="bi bi-file-earmark-pdf" style="margin-right: 10px;"></i> PDF
                                    </a>

                                    <form method="post" action="{{ path('reservation_delete', { id: reservation.id }) }}" onsubmit="return confirm('Are you sure you want to delete this reservation?');">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button type="submit" class="btn btn-danger btn-lg">
                                            <i class="bi bi-trash" style="margin-right: 10px;"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            
        {% endif %}
    </div>

    <style>
        /* Apply black background */
        body {
            background-color: #000000; /* Black background */
            color: #fff; /* Light text color */
        }

        /* Custom styles for the card and reservation items */
        .reservation-equipment-name {
            color: #007bff; /* Primary color */
            font-weight: bold;
            font-size: 1.25rem;
        }

        .card {
            border-radius: 15px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: 1px solid #ddd; /* Light border for cards */
            box-shadow: 0 0 15px rgba(0, 123, 255, 0.2);
        }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: 0 12px 20px rgba(0, 123, 255, 0.4), 0 8px 30px rgba(0, 123, 255, 0.2);
        }

        .card-body {
            padding: 2rem; /* Increased padding */
        }

        .card-title {
            font-size: 1.75rem; /* Larger title */
            font-weight: 600;
            margin-bottom: 1.5rem;
            color: #007bff; /* Bootstrap blue color */
        }

        .card-text {
            font-size: 1.1rem; /* Slightly larger text */
            color: #f8f9fa; /* Lighter text for contrast on black background */
        }

        /* Styling for the buttons */
        .btn {
            padding: 12px 20px; /* Larger buttons */
            font-size: 1.1rem;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

        .btn-outline-secondary {
            color: #6c757d;
            border-color: #6c757d;
        }

        .btn-outline-secondary:hover {
            background-color: #6c757d;
            color: white;
            border-color: #6c757d;
        }

        .btn-danger {
            background-color: #ff5733;
            border-color: #ff5733;
        }

        .btn-danger:hover {
            background-color: #e04e2b;
            border-color: #e04e2b;
        }

        .btn-outline-success {
            color: #28a745;
            border-color: #28a745;
        }

        .btn-outline-success:hover {
            background-color: #28a745;
            color: white;
            border-color: #28a745;
        }

        /* Spacing between buttons */
        .btn + .btn {
            margin-left: 10px;
        }
    </style>

    <!-- Include Bootstrap Icons CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
{% endblock %}
