{% extends 'base.html.twig' %}

{% block title %}Tableau de Bord{% endblock %}

{% block body %}
    <h1>Tableau de Bord</h1>
    
    <ul>
        <li>Total de produits : {{ total_produits }}</li>
        <li>Prix moyen : {{ prix_moyen }} €</li>
        <li>Produit le plus cher : {{ produit_max_prix }}</li>
        <li>Produit le moins cher : {{ produit_min_prix }}</li>
    </ul>

    <div class="chart-container">
        <h2>Graphique des Prix des Produits</h2>
        <canvas id="produitChart" width="400" height="200"></canvas>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Récupérer les données depuis le backend
        const chartData = {{ chart_data|raw }};

        // Extraire les noms et prix pour le graphique
        const labels = chartData.map(item => item.nom);
        const prices = chartData.map(item => item.prix);

        // Créer le graphique avec Chart.js
        const ctx = document.getElementById('produitChart').getContext('2d');
        new Chart(ctx, {
            type: 'bar',  // Type du graphique
            data: {
                labels: labels,  // Noms des produits
                datasets: [{
                    label: 'Prix des Produits (€)',  // Légende
                    data: prices,  // Données des prix
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',  // Couleur des barres
                    borderColor: 'rgba(75, 192, 192, 1)',  // Bordure des barres
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
{% endblock %}
