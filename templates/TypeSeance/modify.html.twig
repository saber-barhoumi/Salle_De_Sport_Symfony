{% extends 'base.html.twig' %}

{% block title %}Modifier le Type d'une séance{% endblock %}

{% block body %}
<h1 class="my-4 text-center">Modifier le type</h1>

<div class="container">
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
    
    <div class="mb-3">
        {{ form_label(form.type, 'Type de la séance', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.type) }}
    </div>
    
    <div class="mb-3">
        {{ form_label(form.description, 'Description de la séance', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.description) }}
    </div>
 

    <div class="text-center">
        <button type="submit" class="btn btn-warning">Modifier le type</button>
    </div>

    {{ form_end(form) }}
    
    <div class="text-center mt-4">
        <a href="{{ path('list_typeseance') }}" class="btn btn-secondary">Retour à la liste des types de séances</a>
    </div>
</div>
{% endblock %}