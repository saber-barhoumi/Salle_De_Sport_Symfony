{% extends 'base2.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.Description }}</td>
            </tr>
            <tr>
            <th>Image</th>
            <td>
                {% if produit.image %}
                    <img src="{{ asset('uploads/images/' ~ produit.image) }}" alt="{{ produit.nom }}" style="max-width: 150px; height: auto;">
                {% else %}
                    <p>Aucune image disponible</p>
                {% endif %}
            </td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>QuantiteStock</th>
                <td>{{ produit.quantiteStock }}</td>
            </tr>
            <tr>
                <th>Cat√©gorie</th>
                <td>{{ produit.CategorieProduit.nom }}</td>
            </tr>
            <tr>
    {% for tag in produit.tags %}
        <li>{{ tag.nom }}</li>
    {% endfor %}
</tr>        </tbody>
    </table>

    <!-- Section des boutons -->
    <div class="text-center mt-4">
        <!-- Bouton Retour √† la liste -->
        <a href="{{ path('produit_index') }}" class="btn btn-outline-secondary mx-2" style="width: 150px;">
            üìã Retour √† la liste
        </a>

        <!-- Bouton √âditer le produit -->
        <a href="{{ path('produit_edit', {'categorieId': produit.categorieProduit.id, 'id': produit.id}) }}" class="btn btn-outline-primary mx-2" style="width: 150px;">
            ‚úèÔ∏è √âditer
        </a>

        <!-- Bouton Supprimer -->
         <form method="post" action="{{ path('produit_delete', {'id': produit.id}) }}" onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer ce produit ?');" style="display: inline-block;">
            <!-- Token CSRF -->
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
            <button type="submit" class="btn btn-outline-danger mx-2" style="width: 150px;">
                üóëÔ∏è Supprimer
            </button>
        </form>
    </div>
{% endblock %}
