<div class="modal-header">
    <h5 class="modal-title text-primary" id="productModalLabel">{{ produit.nom }}</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <!-- Image du produit -->
    <div class="modal-body">
    <!-- Affichage de l'image du produit ou image par défaut -->
    <div class="text-center mb-3">
        <img src="{{ produit.image ? asset('uploads/images/' ~ produit.image) : 'https://via.placeholder.com/150' }}" 
             class="img-fluid rounded shadow-sm" alt="{{ produit.nom }}" style="max-height: 300px; object-fit: contain;"
    </div>>
    
    <!-- Description -->
    <div class="product-description mb-3">
        <h6 class="text-secondary"></h6>
        <p class="text-muted">{{ produit.description }}</p>
    </div>

    <!-- Prix -->
    <div class="product-price text-center">
        <p class="fs-4 fw-bold text-success">Prix : {{ produit.prix }} €</p>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
    <button type="button" class="btn btn-primary">Ajouter au panier</button>
</div>
