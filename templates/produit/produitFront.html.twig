<script>
    document.querySelector('.favoris-icon').addEventListener('click', function () {
        fetch('/favoris/liste')
            .then(response => response.json())
            .then(data => {
                const container = document.querySelector('#favoris-container');
                container.innerHTML = ''; // Réinitialiser le conteneur

                if (data.favoris && data.favoris.length > 0) {
                    data.favoris.forEach(favori => {
                        const favoriItem = `
                            <div class="favori-item">
                                <img src="/uploads/images/${favori.image}" alt="${favori.nom}">
                                <h3>${favori.nom}</h3>
                                <p>Prix : ${favori.prix} €</p>
                                <p>${favori.description}</p>
                            </div>
                        `;
                        container.innerHTML += favoriItem;
                    });
                } else {
                    container.innerHTML = '<p>Aucun favori trouvé.</p>';
                }
            })
            .catch(error => console.error('Erreur lors de la récupération des favoris:', error));
    });
</script>

