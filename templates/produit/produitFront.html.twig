            <div class="col-12 col-md-4">
                <div class="product-tags mt-4">
                    <h3>Tags associés :</h3>
                    <ul class="list-inline">
                        {% for tag in tags %}
                            <li class="list-inline-item">
                                <button class="btn btn-sm btn-outline-primary" 
                                        data-bs-toggle="modal" 
                                        data-bs-target="#produitsModal" 
                                        onclick="loadProduitsByTag({{ tag.id }})">
                                    {{ tag.nom }}
                                </button>
                            </li>
                        {% endfor %}
                    </ul>
                </div>

                <!-- Modal pour afficher les produits associés -->
                <div class="modal fade" id="produitsModal" tabindex="-1" aria-labelledby="produitsModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="produitsModalLabel">Produits associés</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <div id="produitsContainer" class="row">
                                    <p id="loadingMessage" class="text-center text-muted">Chargement des produits...</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Section de Recherche à droite -->
            <div class="col-12 col-md-8">
                <h3 class="text-center mb-4">Rechercher un produit</h3>
                <div class="search-bar">
                    {{ form_start(form, {'attr': {'class': 'search-form', 'id': 'searchForm'}}) }}
                    <div class="search-input d-flex justify-content-between">
                        <!-- Champ de recherche pour le nom du produit -->
                        {{ form_row(form.nom, {'attr': {'placeholder': 'Nom du produit...', 'class': 'search-field form-control'}}) }}
                        
                        <!-- Sélecteur de catégorie de produit -->
                        {{ form_row(form.CategorieProduit, {'attr': {'class': 'search-select form-select'}}) }}
                        
                        <!-- Bouton pour déclencher la recherche et ouvrir la modale -->
                        <button type="button" class="search-btn btn btn-primary" data-bs-toggle="modal" data-bs-target="#searchResultsModal">
                            <i class="fa fa-search"></i> Rechercher
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

    <!-- Modal pour les résultats de recherche -->
    <div class="modal fade" id="searchResultsModal" tabindex="-1" aria-labelledby="searchResultsModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="searchResultsModalLabel">Résultats de la recherche</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="product-results">
                        {% if produits is not empty %}
                            {% for produit in produits %}
                                <div class="product-item mb-4">
                                    <div class="row align-items-center">
                                        <div class="col-md-4">
                                            <img src="{{ asset('uploads/images/' ~ produit.image) }}" alt="{{ produit.nom }}" class="img-fluid rounded shadow-sm">
                                        </div>
                                        <div class="col-md-5">
                                            <h5>{{ produit.nom }}</h5>
                                            <p class="text-muted">Catégorie : {{ produit.CategorieProduit.nom }}</p>
                                        </div>
                                        <div class="col-md-3 text-end">
                                            <button class="btn btn-warning btn-sm mb-2">
                                                <i class="fa fa-shopping-cart"></i> Acheter
                                            </button>
                                            <a href="{{ path('produit_show', {'id': produit.id}) }}" class="btn btn-info btn-sm">Afficher</a>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% else %}
                            <p class="text-center">Aucun produit trouvé.</p>
                        {% endif %}
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                </div>
            </div>
        </div>
    </div>
</section>




