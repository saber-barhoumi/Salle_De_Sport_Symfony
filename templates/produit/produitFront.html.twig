                    <a href="#" class="primary-btn btn-normal appoinment-btn">appointment</a>
                </div>
            </div>
        </div>
        <div class="row">
            <!-- Section des produits -->
            <div class="col-lg-8">
                <div class="row">
                    {% for produit in produits %}
                        <div class="col-lg-4 col-md-6">
                            <div class="ts-item set-bg" 
                                 data-setbg="{{ produit.image ? asset('uploads/images/' ~ produit.image) : 'https://via.placeholder.com/150' }}" 
                                 style="background-image: url('{{ produit.image ? asset('uploads/images/' ~ produit.image) : 'https://via.placeholder.com/150' }}');">
                                <div class="ts_text">
                                    <h4>{{ produit.nom }}</h4>
                                    <p>{{ produit.description }}</p>
                                    <span>{{ produit.prix }} €</span>
                                   <a href="{{ path('cart_add', {id: produit.id}) }}" class="primary-btn btn-normal appoinment-btn">Ajouter au Panier</a>
                                    <a href="{{ path('ajouter_favoris', {'id': produit.id}) }}" class="primary-btn btn-normal appoinment-btn" >Ajouter aux favoris</a>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="col-12 text-center">
                            <p>Aucun produit trouvé.</p>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Section de la barre latérale -->
            <div class="col-lg-4">
                <div class="sidebar-option">
                    <div class="so-latest">
                        <!-- Categories section -->
                        <div class="so-categories">
                            <h5 class="title">Categories</h5>
                            <ul>
                                {% for categorie in categories %}
                                    <li>
                                        <a href="{{ path('categorie_produit_show', {'id': categorie.id}) }}">
                                            {{ categorie.nom }} 
                                            <span>{{ categorie.produits|length }}</span>
                                        </a>
                                    </li>
                                {% else %}
                                    <li>Aucune catégorie trouvée</li>
                                {% endfor %}
                            </ul>
                        </div>

                        <!-- Tags section -->
                        <div class="so-tags">
                            <h5 class="title">Popular tags</h5>
                            <ul>
                                {% for tag in tags %}
                                    <li><a href="{{ path('tag_show', {id: tag.id}) }}">{{ tag.nom }}</a></li>
                                {% else %}
                                    <li>Aucun tag trouvé</li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <!-- Section pour télécharger le catalogue -->
