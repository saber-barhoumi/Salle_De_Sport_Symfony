{% extends 'base.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block body %}
<style>
.pagination {
    display: flex;
    justify-content: center;
    margin-top: 30px;
    margin-bottom: 30px;
    padding: 0;
    list-style: none;
}

.pagination a, .pagination span {
    padding: 10px 20px;
    margin: 0 5px;
    text-decoration: none;
    color: #007bff;
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 50px;
    font-size: 16px;
    font-weight: 600;
    transition: background-color 0.3s, color 0.3s, transform 0.3s;
}

.pagination a:hover, .pagination span:hover {
    background-color: #007bff;
    color: #fff;
    transform: translateY(-2px);
}

.pagination .active {
    background-color: #007bff;
    color: #fff;
    border-color: #007bff;
}

.pagination .disabled {
    color: #6c757d;
    pointer-events: none;
    background-color: #f8f9fa;
    border-color: #ddd;
}

.pagination .prev, .pagination .next {
    font-weight: 700;
    color: #007bff;
}

.pagination .prev:hover, .pagination .next:hover {
    color: #0056b3; 
    transform: translateY(-2px); 
}

.pagination .first, .pagination .last {
    margin-left: 10px;
    margin-right: 10px;
}
</style>

<div class="container mt-5">
    <h1 class="mb-4 text-center">ğŸ›’ Liste des Produits Disponibles</h1>

    <!-- Affichage des alertes -->
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            âœ… {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <!-- Formulaire de filtrage -->
    <form method="get" action="{{ path('produit_index') }}" class="mb-4">
        <div class="row">
            <div class="col">
                <label for="prixMin">Prix Min (â‚¬)</label>
                <input type="number" step="0.01" name="prixMin" id="prixMin" class="form-control" value="{{ app.request.query.get('prixMin') }}">
            </div>
            <div class="col">
                <label for="quantiteMin">QuantitÃ© Stock Min</label>
                <input type="number" name="quantiteMin" id="quantiteMin" class="form-control" value="{{ app.request.query.get('quantiteMin') }}">
            </div>
            <div class="col mt-4">
                <button type="submit" class="btn btn-primary">Filtrer</button>
            </div>
        </div>
    </form>

    <!-- Tableau des produits -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th scope="col">ğŸ†” ID</th>
                    <th scope="col">ğŸ·ï¸ Nom</th>
                    <th scope="col">ğŸ“ Description</th>
                    <th scope="col">ğŸ“· Image</th>
                    <th scope="col">ğŸ’² Prix (â‚¬)</th>
                    <th scope="col">ğŸ“¦ QuantitÃ© Stock</th>
                    <th scope="col">ğŸ·ï¸ CatÃ©gorie</th>
                    <th scope="col">ğŸ·ï¸ Tags</th>
                    <th scope="col">âš™ï¸ Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for produit in produits %}
                    <tr>
                        <td class="text-center">{{ produit.id }}</td>
                        <td>{{ produit.nom }}</td>
                        <td>{{ produit.description }}</td>
                        <td class="text-center">
                            {% if produit.image %}
                                <img src="{{ asset('uploads/images/' ~ produit.image) }}" alt="{{ produit.nom }}" class="img-thumbnail" style="width: 100px;">
                            {% else %}
                                <span class="text-muted">Aucune image</span>
                            {% endif %}
                        </td>
                        <td class="text-center">{{ produit.prix|number_format(2, '.', ',') }} â‚¬</td>
                        <td class="text-center">{{ produit.quantiteStock }}</td>
                        <td class="text-center">{{ produit.CategorieProduit.nom }}</td>
                        <td class="text-center">
                            {% if produit.tags|length > 0 %}
                                {% for tag in produit.tags %}
                                    <span class="badge bg-primary">{{ tag.nom }}</span>
                                {% endfor %}
                            {% else %}
                                <span class="text-muted">Aucun tag</span>
                            {% endif %}
                        </td>
                        <td class="text-center">
                            <a href="{{ path('produit_show', {'id': produit.id}) }}" class="btn btn-info btn-sm" title="Voir">ğŸ‘ï¸ Voir</a>
                            <a href="{{ path('produit_edit', {'categorieId': produit.CategorieProduit.id, 'id': produit.id}) }}" class="btn btn-warning btn-sm" title="Modifier">âœï¸ Modifier</a>
                            <a href="#" class="btn btn-danger btn-sm" title="Supprimer"
                               onclick="event.preventDefault(); if (confirm('ÃŠtes-vous sÃ»r de vouloir supprimer ce produit ?')) { 
                                   document.getElementById('delete-form-{{ produit.id }}').submit(); }">
                                ğŸ—‘ï¸ Supprimer
                            </a>
                            <form id="delete-form-{{ produit.id }}" method="post" action="{{ path('produit_delete', {'id': produit.id}) }}" style="display: none;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="9" class="text-center text-muted">Aucun produit trouvÃ©. Cliquez sur "Ajouter un Nouveau Produit" pour commencer.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="text-end mb-4">
            <a href="{{ path('produit_new') }}" class="btn btn-primary btn-sm" title="Ajouter un produit">â• Ajouter</a>
        </div>
    </div>
</div>

<!-- Pagination -->
<div class="pagination justify-content-center">
    {{ knp_pagination_render(produits) }}
</div>
{% endblock %}