{% extends 'base.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('public/css/styles.css') }}">
{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-center">
        🛒 Liste des Produits Disponibles
    </h1>

    <!-- Affichage des alertes -->
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            ✅ {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <!-- Tableau des produits -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th scope="col">🆔 ID</th>
                    <th scope="col">🏷️ Nom</th>
                    <th scope="col">📝 Description</th>
                    <th scope="col">📷 Image</th>
                    <th scope="col">💲 Prix (€)</th>
                    <th scope="col">📦 Quantité Stock</th>
                    <th scope="col">🏷️ Catégorie</th>
                    <th scope="col">🏷️ Tags</th>  <!-- Nouvelle colonne pour afficher les tags -->
                    <th scope="col">⚙️ Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for produit in produits %}
                    <tr>
                        <td class="text-center">{{ produit.id }}</td>
                        <td>{{ produit.nom }}</td>
                        <td>{{ produit.description }}</td>
                        <td class="text-center">
                            {% if produit.image %}
                                <img src="{{ asset('uploads/images/' ~ produit.image) }}" alt="{{ produit.nom }}" class="img-thumbnail" style="width: 100px;">
                            {% else %}
                                <span class="text-muted">Aucune image</span>
                            {% endif %}
                        </td>
                        <td class="text-center">{{ produit.prix|number_format(2, '.', ',') }} €</td>
                        <td class="text-center">{{ produit.quantiteStock }}</td>
                        <td class="text-center">{{ produit.CategorieProduit.nom }}</td>

                        <td class="text-center">
                            <!-- Affichage des tags associés à chaque produit -->
                            {% if produit.tags|length > 0 %}
                                {% for tag in produit.tags %}
                                    <span class="badge bg-primary">{{ tag.nom }}</span>
                                {% endfor %}
                            {% else %}
                                <span class="text-muted">Aucun tag</span>
                            {% endif %}
                        </td>

                        <td class="text-center">
                            <a href="{{ path('produit_show', {'id': produit.id}) }}" class="btn btn-info btn-sm" title="Voir">
                                👁️ Voir
                            </a>
                            <a href="{{ path('produit_edit', {'categorieId': produit.CategorieProduit.id, 'id': produit.id}) }}" class="btn btn-warning btn-sm" title="Modifier">
                                ✏️ Modifier
                            </a>
                             <a href="#" class="btn btn-danger btn-sm" title="Supprimer"
                               onclick="event.preventDefault(); if (confirm('Êtes-vous sûr de vouloir supprimer ce produit ?')) { 
                                   document.getElementById('delete-form-{{ produit.id }}').submit(); }">
                                🗑️ Supprimer
                            </a>
                            <form id="delete-form-{{ produit.id }}" method="post" action="{{ path('produit_delete', {'id': produit.id}) }}" style="display: none;">
                                <!-- Token CSRF pour sécuriser la requête -->
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                            </form>

                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center text-muted">
                            Aucun produit trouvé. Cliquez sur "Ajouter un Nouveau Produit" pour commencer.
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <!-- Bouton pour créer un nouveau produit -->
        <div class="text-end mb-4">
            <a href="{{ path('produit_new') }}" class="btn btn-primary btn-sm" title="Ajouter un produit">
                ➕ Ajouter
            </a>
        </div>
    </div>
</div>
{% endblock %}
