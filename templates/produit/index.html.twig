{% extends 'base.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('public/css/styles.css') }}">
{% endblock %}

{% block body %}
<style>
.pagination {
    display: flex;
    justify-content: center;
    margin-top: 30px;
    margin-bottom: 30px;
    padding: 0;
    list-style: none;
}


.pagination a, .pagination span {
    padding: 10px 20px;
    margin: 0 5px;
    text-decoration: none;
    color: #007bff;
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 50px;
    font-size: 16px;
    font-weight: 600;
    transition: background-color 0.3s, color 0.3s, transform 0.3s;
}

.pagination a:hover, .pagination span:hover {
    background-color: #007bff;
    color: #fff;
    transform: translateY(-2px);
}

.pagination .active {
    background-color: #007bff;
    color: #fff;
    border-color: #007bff;
}

.pagination .disabled {
    color: #6c757d;
    pointer-events: none;
    background-color: #f8f9fa;
    border-color: #ddd;
}

.pagination .prev, .pagination .next {
    font-weight: 700;
    color: #007bff;
}

.pagination .prev:hover, .pagination .next:hover {
    color: #0056b3; 
    transform: translateY(-2px); 
}

.pagination .first, .pagination .last {
    margin-left: 10px;
    margin-right: 10px;
}

</style>
<div class="container mt-5">
    <h1 class="mb-4 text-center">
        üõí Liste des Produits Disponibles
    </h1>

    <!-- Affichage des alertes -->
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            ‚úÖ {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <!-- Formulaire de filtrage -->
    <form method="get" action="{{ path('produit_index') }}" class="mb-4">
        <div class="row">
            <!-- Filtre par Prix Minimum -->
            <div class="col">
                <label for="prixMin">Prix Min (‚Ç¨)</label>
                <input type="number" step="0.01" name="prixMin" id="prixMin" class="form-control" value="{{ app.request.query.get('prixMin') }}">
            </div>

            <!-- Filtre par Quantit√© Minimum -->
            <div class="col">
                <label for="quantiteMin">Quantit√© Stock Min</label>
                <input type="number" name="quantiteMin" id="quantiteMin" class="form-control" value="{{ app.request.query.get('quantiteMin') }}">
            </div>

            <div class="col mt-4">
                <button type="submit" class="btn btn-primary">Filtrer</button>
            </div>
        </div>
    </form>

    <!-- Tableau des produits -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th scope="col">üÜî ID</th>
                    <th scope="col">üè∑Ô∏è Nom</th>
                    <th scope="col">üìù Description</th>
                    <th scope="col">üì∑ Image</th>
                    <th scope="col">üí≤ Prix (‚Ç¨)</th>
                    <th scope="col">üì¶ Quantit√© Stock</th>
                    <th scope="col">üè∑Ô∏è Cat√©gorie</th>
                    <th scope="col">üè∑Ô∏è Tags</th>  <!-- Nouvelle colonne pour afficher les tags -->
                    <th scope="col">‚öôÔ∏è Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for produit in produits %}
                    <tr>
                        <td class="text-center">{{ produit.id }}</td>
                        <td>{{ produit.nom }}</td>
                        <td>{{ produit.description }}</td>
                        <td class="text-center">
                            {% if produit.image %}
                                <img src="{{ asset('uploads/images/' ~ produit.image) }}" alt="{{ produit.nom }}" class="img-thumbnail" style="width: 100px;">
                            {% else %}
                                <span class="text-muted">Aucune image</span>
                            {% endif %}
                        </td>
                        <td class="text-center">{{ produit.prix|number_format(2, '.', ',') }} ‚Ç¨</td>
                        <td class="text-center">{{ produit.quantiteStock }}</td>
                        <td class="text-center">{{ produit.CategorieProduit.nom }}</td>

                        <td class="text-center">
                            <!-- Affichage des tags associ√©s √† chaque produit -->
                            {% if produit.tags|length > 0 %}
                                {% for tag in produit.tags %}
                                    <span class="badge bg-primary">{{ tag.nom }}</span>
                                {% endfor %}
                            {% else %}
                                <span class="text-muted">Aucun tag</span>
                            {% endif %}
                        </td>

                        <td class="text-center">
                            <a href="{{ path('produit_show', {'id': produit.id}) }}" class="btn btn-info btn-sm" title="Voir">
                                üëÅÔ∏è Voir
                            </a>
                            <a href="{{ path('produit_edit', {'categorieId': produit.CategorieProduit.id, 'id': produit.id}) }}" class="btn btn-warning btn-sm" title="Modifier">
                                ‚úèÔ∏è Modifier
                            </a>
                             <a href="#" class="btn btn-danger btn-sm" title="Supprimer"
                               onclick="event.preventDefault(); if (confirm('√ätes-vous s√ªr de vouloir supprimer ce produit ?')) { 
                                   document.getElementById('delete-form-{{ produit.id }}').submit(); }">
                                üóëÔ∏è Supprimer
                            </a>
                            <form id="delete-form-{{ produit.id }}" method="post" action="{{ path('produit_delete', {'id': produit.id}) }}" style="display: none;">
                                <!-- Token CSRF pour s√©curiser la requ√™te -->
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                            </form>

                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="text-center text-muted">
                            Aucun produit trouv√©. Cliquez sur "Ajouter un Nouveau Produit" pour commencer.
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <!-- Bouton pour cr√©er un nouveau produit -->
        <div class="text-end mb-4">
            <a href="{{ path('produit_new') }}" class="btn btn-primary btn-sm" title="Ajouter un produit">
                ‚ûï Ajouter
            </a>
        </div>
    </div>
</div>
   
    <!-- Pagination -->
    <div class="pagination justify-content-center">
        {{ knp_pagination_render(produits) }}
    </div>
</div>
{% endblock %}


