{% extends 'base.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-center">
        üõí Liste des Produits Disponibles
    </h1>

    <!-- Affichage des alertes -->
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            ‚úÖ {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <!-- Bouton pour cr√©er un nouveau produit -->
    <div class="text-end mb-4">
        <a href="{{ path('produit_new') }}" class="btn btn-primary">
            ‚ûï Ajouter un Nouveau Produit
        </a>
    </div>

    <!-- Tableau des produits -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th scope="col">üÜî ID</th>
                    <th scope="col">üè∑Ô∏è Nom</th>
                    <th scope="col">üìù Description</th>
                    <th scope="col">üì∑ Image</th>
                    <th scope="col">üí≤ Prix (‚Ç¨)</th>
                    <th scope="col">üì¶ Quantit√© Stock</th>
                    <th scope="col">‚öôÔ∏è Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for produit in produits %}
                    <tr>
                        <td class="text-center">{{ produit.id }}</td>
                        <td>{{ produit.nom }}</td>
                        <td>{{ produit.description }}</td>
                        <td class="text-center">
                            {% if produit.image %}
                                <img src="{{ asset('uploads/images/' ~ produit.image) }}" alt="{{ produit.nom }}" class="img-thumbnail" style="width: 100px;">
                            {% else %}
                                <span class="text-muted">Aucune image</span>
                            {% endif %}
                        </td>
                        <td class="text-center">{{ produit.prix|number_format(2, '.', ',') }} ‚Ç¨</td>
                        <td class="text-center">{{ produit.quantiteStock }}</td>
                        <td class="text-center">
                            <a href="{{ path('produit_show', {'id': produit.id}) }}" class="btn btn-info btn-sm" title="Voir">
                                üëÅÔ∏è Voir
                            </a>
                            <a href="{{ path('produit_edit', {'id': produit.id}) }}" class="btn btn-warning btn-sm" title="Modifier">
                                ‚úèÔ∏è Modifier
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center text-muted">
                            Aucun produit trouv√©. Cliquez sur "Ajouter un Nouveau Produit" pour commencer.
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<!-- Styles personnalis√©s -->
<style>
    .container {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

    h1 {
        color: #333;
        font-weight: bold;
    }

    .table {
        margin-top: 20px;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0056b3;
    }

    .btn-info {
        color: #fff;
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

    .btn-warning {
        color: #fff;
        background-color: #ffc107;
        border-color: #ffc107;
    }
</style>
{% endblock %}
