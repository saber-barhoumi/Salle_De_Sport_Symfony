{% extends 'base2.html.twig' %}
{% block body %}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="team-title">
                <div class="section-title">
                    <span>Search</span>
                    <h2>Find Your Product</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        {{ form_start(form, { 'attr': { 'class': 'form-inline' } }) }}
            <div class="form-group mx-sm-3 mb-2">
                {{ form_widget(form.nom, { 'attr': { 'placeholder': 'Product Name', 'class': 'form-control' } }) }}
            </div>
            <div class="form-group mx-sm-3 mb-2">
                {{ form_widget(form.CategorieProduit, { 'attr': { 'class': 'form-control' } }) }}
            </div>
            <button type="submit" class="btn btn-primary mb-2">Search</button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

