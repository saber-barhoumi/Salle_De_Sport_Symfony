{% extends 'base.html.twig' %}

{% block title %}Equipment List{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4 text-primary fw-bold">Equipment List</h1>

    {% if equipementList is empty %}
        <p class="text-center text-danger fw-bold">
            No equipment found.
        </p>
    {% else %}
        <div class="table-responsive shadow-sm">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price($)</th>
                        <th scope="col">Condition</th>
                        <th scope="col">Supplier</th>
                        <th scope="col">Category</th>
                        <th scope="col">Photo</th>
                        <th scope="col">Description</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for equipement in equipementList %}
                        <tr>
                            <td class="text-center">{{ equipement.id }}</td>
                            <td>{{ equipement.nom }}</td>
                            <td>{{ equipement.prix }}</td>
                            <td>{{ equipement.etat }}</td>
                            <td>{{ equipement.fournisseur }}</td>
                            <td>
                                {% if equipement.equipement is not null %}
                                    {{ equipement.equipement.nom }}
                                {% else %}
                                    <span class="text-muted">No category</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if equipement.photo %}  
                                <img src="{{ asset('uploads/images/' ~ equipement.photo) }}" alt="{{ equipement.nom }}" class="img-thumbnail" style="max-width: 100px; max-height: 100px;">
                                {% else %}
                                    <span class="text-muted">No photo</span>
                                {% endif %}
                            </td>
                            <td>{{ equipement.descriptions }}</td>
                            <td class="text-center">
                                <a href="{{ path('app_edit_equipement', { id: equipement.id }) }}" class="btn btn-outline-warning btn-sm me-2">
                                    <i class="bi bi-pencil-fill"></i> Edit
                                </a>
                                <a href="{{ path('app_delete_equipement', { id: equipement.id }) }}" class="btn btn-outline-danger btn-sm"
                                   onclick="return confirm('Are you sure you want to delete this equipment?');">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}

{% block stylesheets %}
<style>
    .container {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
    }

    .table-responsive {
        border-radius: 10px;
        overflow: hidden;
    }

    h1 {
        font-size: 2.5rem;
        color: #0d6efd;
    }

    .text-muted {
        font-style: italic;
    }
</style>
{% endblock %}
