{% extends 'base.html.twig' %}

{% block title %}Equipment List{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4 text-primary font-weight-bold">Equipment List</h1>

    {% if equipementList is empty %}
        <p class="text-center text-danger font-weight-bold">
            No equipment found.
        </p>
    {% else %}
        <table class="table table-striped table-bordered table-hover shadow-sm">
            <thead class="thead-dark">
                <tr>
                    <th class="text-center">ID</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Condition</th>
                    <th>Supplier</th>
                    <th>Category</th>
                    <th>Photo</th>
                    <th>Description</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for equipement in equipementList %}
                    <tr>
                        <td class="text-center">{{ equipement.id }}</td>
                        <td>{{ equipement.nom }}</td>
                        <td>{{ equipement.prix }}</td>
                        <td>{{ equipement.etat }}</td>
                        <td>{{ equipement.fournisseur }}</td>
                        <td>
                            {% if equipement.equipement is not null %}
                                {{ equipement.equipement.nom }}
                            {% else %}
                                No category
                            {% endif %}
                        </td>
                        <td>
                            {% if equipement.photo %}
                                <img src="{{ asset('img/' ~ equipement.photo) }}" alt="{{ equipement.nom }}" class="img-thumbnail" style="max-width: 100px; max-height: 100px;">
                            {% else %}
                                No photo
                            {% endif %}
                        </td>
                        <td>{{ equipement.descriptions }}</td>
                        <td class="text-center">
                            <a href="{{ path('app_edit_equipement', { id: equipement.id }) }}" class="btn btn-info btn-sm text-white font-weight-bold px-3 py-2">
                                Edit
                            </a>
                            <a href="{{ path('app_delete_equipement', { id: equipement.id }) }}" class="btn btn-danger btn-sm text-white font-weight-bold px-3 py-2"
                               onclick="return confirm('Are you sure you want to delete this equipment?');">
                                Delete
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}

{% block stylesheets %}
<style>
    /* Equipment List Table Styles */
    .container {
        margin-top: 50px;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-size: 2rem;
        color: #007bff;
        text-align: center;
        margin-bottom: 20px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    table th, table td {
        padding: 12px;
        border: 1px solid #ddd;
        text-align: left;
    }

    table th {
        background-color: #343a40;
        color: #fff;
        font-weight: bold;
    }

    .table-striped tbody tr:nth-child(odd) {
        background-color: #f9f9f9;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1;
    }

    .img-thumbnail {
        display: block;
        margin: 0 auto;
    }

    .btn-info {
        background-color: #007bff;
        color: #fff;
        padding: 8px 12px;
        text-decoration: none;
        border-radius: 4px;
    }

    .btn-info:hover {
        background-color: #0056b3;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
        padding: 8px 12px;
        text-decoration: none;
        border-radius: 4px;
    }

    .btn-danger:hover {
        background-color: #c82333;
    }
</style>
{% endblock %}
