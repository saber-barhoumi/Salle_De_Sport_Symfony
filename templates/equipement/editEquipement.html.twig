{% extends 'base.html.twig' %}

{% block title %}Edit Equipment{% endblock %}

{% block body %}
<div class="container mt-5">
    <h2 class="text-white">Edit Equipment</h2>
    <div class="card p-4 bg-dark text-white">
        {{ form_start(form) }}

        <!-- Equipment Name -->
        <div class="form-group">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom, { 'attr': { 'class': 'form-control' } }) }}
            {{ form_errors(form.nom) }}
        </div>

        <!-- Price -->
        <div class="form-group">
            {{ form_label(form.prix) }}
            {{ form_widget(form.prix, { 'attr': { 'class': 'form-control' } }) }}
            {{ form_errors(form.prix) }}
        </div>

        <!-- Condition (Styled Radio Buttons) -->
        <div class="form-group">
            {{ form_label(form.etat) }}
            <div class="d-flex align-items-center">
                <label class="form-check me-3">
                    {{ form_widget(form.etat.0, { 'attr': { 'class': 'form-check-input' } }) }}
                    <span class="ms-2">New</span>
                </label>
                <label class="form-check">
                    {{ form_widget(form.etat.1, { 'attr': { 'class': 'form-check-input' } }) }}
                    <span class="ms-2">Used</span>
                </label>
            </div>
            {{ form_errors(form.etat) }}
        </div>

        <!-- Supplier -->
        <div class="form-group">
            {{ form_label(form.fournisseur) }}
            {{ form_widget(form.fournisseur, { 'attr': { 'class': 'form-control' } }) }}
            {{ form_errors(form.fournisseur) }}
        </div>

        <!-- Category -->
        <div class="form-group">
            {{ form_label(form.Equipement) }}
            {{ form_widget(form.Equipement, { 'attr': { 'class': 'form-control' } }) }}
            {{ form_errors(form.Equipement) }}
        </div>

        <!-- Save Button -->
        <button type="submit" class="btn btn-danger btn-block mt-3">Save</button>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
