}

.ci-text h5 {
    font-size: 20px;
    font-weight: 700;
    color: #333;
    margin-top: 10px;
}

.ci-text a {
    display: inline-block;
    margin-top: 10px;
    color: #ff5722;
    font-size: 18px;
}

.ci-text a:hover {
    text-decoration: underline;
}

/* Media Queries for Responsiveness */
@media (max-width: 768px) {
    .search-bar .row {
        flex-direction: column;
    }

    .search-bar .col-lg-6 {
        margin-bottom: 20px;
    }

    .class-item {
        margin-bottom: 20px;
    }
}

