{% extends 'base.html.twig' %}

{% block title %}Liste des séances{% endblock %}

{% block body %}
<h1 class="my-4 text-center">Liste des séances</h1>

<div class="table-responsive">
    <table class="table table-striped table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Date</th>
                <th>Durée</th>
                <th>Capacité</th>
                <th>Salle</th>
                <th>Statut</th>
                <th>Participants Inscrits</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for seance in seance %}
            <tr>
                <td>{{ seance.id }}</td>
                <td>{{ seance.date|date('d/m/Y') }}</td>
                <td>{{ seance.duree }} minutes</td>
                <td>{{ seance.CapaciteMax }}</td>
                <td>{{ seance.Salle }}</td>
                <td>{{ seance.Statut }}</td>
                <td>{{ seance.Participantsinscrits }}</td>
                <td>
                    <a href="{{ path('modify_seance', { id: seance.id }) }}" class="btn btn-sm btn-warning">Modifier</a>
                    <a href="{{ path('delete_seance', { id: seance.id }) }}" class="btn btn-sm btn-danger" onclick="return confirm('Êtes-vous sûr ?')">Supprimer</a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="8" class="text-center">Aucune séance disponible.</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<div class="text-center mt-4">
    <a href="{{ path('add_seance') }}" class="btn btn-success">Ajouter une nouvelle séance</a>
</div>
{% endblock %}

