{% extends 'base.html.twig' %}

{% block title %}Liste des Produits{% endblock %}

{% block body %}
<h1>Nos Produits</h1>
<div class="product-container">
    {% for produit in produits %}
        <div class="product-card">
            <img src="{{ asset('uploads/images/' ~ produit.image) }}" alt="{{ produit.nom }}">
            <h2>{{ produit.nom }}</h2>
            <p>Catégorie : {{ produit.categorieProduit.nom }}</p>
            <p>Prix : {{ produit.prix }} DT</p>
            <a href="{{ path('produit_show', {id: produit.id}) }}" class="btn btn-primary">Détails</a>
        </div>
    {% endfor %}
</div>
{% endblock %}
