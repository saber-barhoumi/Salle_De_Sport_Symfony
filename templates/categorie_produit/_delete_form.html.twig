{% extends 'base.html.twig' %}

{% block title %}Edit CategorieProduit{% endblock %}

{% block body %}
    <h1>Editer la catégorie de produit</h1>

    {{ include('categorie_produit/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('categorie_produit_index') }}">Retour à la liste</a>

    <!-- Formulaire de suppression avec emoji de poubelle -->
    <form method="post" action="{{ path('categorie_produit_delete', {'id': categorie_produit.id}) }}" 
          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette catégorie ?');" class="d-inline">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ categorie_produit.id) }}">
        <button type="submit" class="btn btn-danger">
            🗑️ Supprimer
        </button>
    </form>
{% endblock %}

