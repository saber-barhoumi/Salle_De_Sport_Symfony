{% extends 'base.html.twig' %}

{% block title %}🆕 Créer une nouvelle catégorie{% endblock %}

{% block body %}
    <div class="container" style="max-width: 800px; margin: auto; background: #f9f9f9; padding: 20px; border-radius: 8px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
        <h1 class="text-center mb-4" style="font-family: Arial, sans-serif; color: #333;">🛍️ Créer une nouvelle catégorie de produit</h1>

        <div class="mb-4">
            <img src="{{ asset('img/illustration.png') }}" alt="Illustration de catégorie" style="max-width: 100%; height: auto;">
        </div>

        {{ form_start(form) }}
            <!-- Utilisation de form_row pour éviter les répétitions et donner un bon format -->
            <div class="form-group mb-4">
                {{ form_row(form.nom, {'label': 'Nom de la catégorie 🏷️', 'attr': {'class': 'form-control', 'placeholder': 'Saisissez le nom de la catégorie', 'style': 'padding: 10px; border: 1px solid #ccc; border-radius: 4px;'}}) }}
                {{ form_errors(form.nom) }}
            </div>
             <div class="mt-3">
            <p class="text-center" style="color: #555;">🔍 Assurez-vous de remplir tous les champs nécessaires avant de soumettre le formulaire.</p>
        </div>
            <div class="text-center">
                <button type="submit" class="btn btn-success btn-lg mt-3" style="background-color: #28a745; border: none; padding: 10px 20px; border-radius: 4px; color: white; font-size: 16px; cursor: pointer;">
                    ➕ Ajouter la catégorie
                </button>
            </div>
        {{ form_end(form) }}

       
    </div>
{% endblock %}
