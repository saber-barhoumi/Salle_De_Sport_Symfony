



{% extends 'base3.html.twig' %}

{% block title %}Catégorie des Produits{% endblock %}

{% block body %}
    <h1>{{ categorie_produit.nom }}</h1>

    <div class="row">
        {% for produit in categorie_produit.produits %}
            <div class="col-lg-4 col-md-6">
                <div class="ts-item set-bg" 
                     data-setbg="{{ produit.image ? asset('uploads/images/' ~ produit.image) : asset('images/default-product.jpg') }}" 
                     style="background-image: url('{{ produit.image ? asset('uploads/images/' ~ produit.image) : asset('images/default-product.jpg') }}');">
                    <div class="ts_text">
                        <h4>{{ produit.nom }}</h4>
                        <p>{{ produit.description }}</p>
                        <span>{{ produit.prix }} €</span>
                        <!-- Bouton Ajouter au panier -->
                        <a href="{{ path('cart_add', {'id': produit.id}) }}" class="btn btn-primary">
                            <i class="fas fa-shopping-cart"></i> Ajouter au panier
                        </a>
                    </div>
                </div>
            </div>
        {% else %}
            <p>Aucun produit trouvé dans cette catégorie.</p>
        {% endfor %}
    </div>

