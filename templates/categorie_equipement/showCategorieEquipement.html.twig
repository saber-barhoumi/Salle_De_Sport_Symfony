{% extends 'base.html.twig' %}

{% block title %}Category List{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4 text-primary fw-bold">Category List</h1>

    {% if categoryList is empty %}
        <p class="text-center text-danger fw-bold">
            No categories found.
        </p>
    {% else %}
        <div class="table-responsive shadow-sm">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th scope="col" class="text-center">ID</th>
                        <th scope="col">Category Name</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for category in categoryList %}
                        <tr>
                            <td class="text-center">{{ category.id }}</td>
                            <td>{{ category.nom }}</td>
                            <td class="text-center">
                                <a href="{{ path('app_edit_categorie_equipement', { id: category.id }) }}" 
                                   class="btn btn-outline-warning btn-sm me-2">
                                    <i class="bi bi-pencil-fill"></i> Edit
                                </a>
                                <a href="{{ path('app_delete_categorie_equipement', { id: category.id }) }}" 
                                   class="btn btn-outline-danger btn-sm"
                                   onclick="return confirm('Are you sure you want to delete this category?');">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
</div>
{% endblock %}

{% block stylesheets %}
<style>
    .container {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
    }

    .table-responsive {
        border-radius: 10px;
        overflow: hidden;
    }

    h1 {
        font-size: 2.5rem;
        color: #0d6efd;
    }

    .btn-outline-warning {
        color: #ffc107;
        border-color: #ffc107;
    }

    .btn-outline-warning:hover {
        background-color: #ffc107;
        color: white;
    }

    .btn-outline-danger:hover {
        background-color: #dc3545;
        color: white;
    }

    .text-muted {
        font-style: italic;
    }
</style>
{% endblock %}
