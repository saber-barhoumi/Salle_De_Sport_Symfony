{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center font-weight-bold mb-4">Edit Category</h1>
    <div>
        {{ form_start(form) }}

        <div class="form-group mb-3">
            <label for="categoryName" class="font-weight-bold">Category Name</label>
            {# Dynamically add 'is-invalid' if there are errors #}
            {{ form_widget(form.nom, {
                'attr': {
                    'class': 'form-control' ~ (form.nom.vars.errors|length > 0 ? ' is-invalid' : ''),
                    'id': 'categoryName'
                }
            }) }}
            {# Display errors #}
            {% if form.nom.vars.errors|length > 0 %}
                <div class="invalid-feedback">
                    {{ form_errors(form.nom) }}
                </div>
            {% endif %}
        </div>

        <div class="text-center">
            {{ form_widget(form.SAVE) }}
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
